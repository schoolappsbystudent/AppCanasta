<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">
    <TextView
     
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:minHeight="25px"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView_titulomes" />
    <HorizontalScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView1">
    
        <TableLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3"
        android:id="@+id/tableLayout1">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           

            <TextView
                p4:placeholder="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alimentos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="1"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/columna1" />
            <TextView
                p4:placeholder="true"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="Uso del hogar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="2"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/columna02" />
            <TextView
                p4:placeholder="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="Vestuario"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="3"
                android:minWidth="30px"
                android:minHeight="30px"
                android:id="@+id/columna03" />
        </TableRow>
         <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="#FF909090"/>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
             
            <TextView
                p4:placeholder="true"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:id="@+id/textViewvaluefood" />
            <TextView
                p4:placeholder="true"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_column="2"
                android:id="@+id/valuehome" />
            <TextView
                p4:placeholder="true"
               android:layout_width="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:id="@+id/valueclothes" />
        </TableRow>
         <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:layout_marginTop="80px"
            android:background="#FF909090"/>

    </TableLayout>
  
</HorizontalScrollView>




    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="50px"
         android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:id="@+id/total" />





</LinearLayout>
